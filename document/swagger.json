{
  "openapi": "3.0.0",
  "info": {
    "title": "forum APi",
    "version": "0.0.1",
    "description": "quipu forum api용 swagger"
  },
  "paths": {
    "/auth/join": {
      "post": {
        "summary": "회원 가입",
        "description": "forum에 회원가입",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "student_id": {
                    "type": "string",
                    "description": "회원가입 희망자의 학번",
                    "example": "2020440102"
                  },
                  "email": {
                    "type": "string",
                    "description": "회원가입 희망자의 이메일",
                    "example": "example@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "description": "생성 계정의 비밀번호",
                    "example": "quipu1234"
                  }
                },
                "required": ["student_id", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "회원 가입 완료",
            "content": {
              "application/json": {
                "example": "회원 가입 완료"
              }
            }
          },
          "409": {
            "description": "퀴푸의 회원이 아님",
            "content": {
              "application/json": {
                "example": "퀴푸 동아리원이 아닙니다"
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "example": "서버 에러"
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "로그인",
        "description": "forum 회원의 계정 로그인",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "student_id": {
                    "type": "string",
                    "description": "학번이자 forum의 id. 테스트 시에는 반드시 202044012로 해주세요",
                    "example": "2020440102"
                  },
                  "password": {
                    "type": "string",
                    "description": "계정의 id. 테스트 시에는 반드시 quipu1234로 해주세요",
                    "example": "quipu1234"
                  }
                },
                "required": ["student_id", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공, 토큰 반환",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "인증 토큰"
                    }
                  }
                },
                "example": {
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                }
              }
            }
          },
          "401": {
            "description": "회원이 아님 or 비밀번호가 틀림. 정보는 message로 갈 것",
            "content": {
              "application/json": {
                "example": "${info.message}로 넘어감"
              }
            }
          },
          "500": {
            "description": "서버 에러, FE 측 메세지 전송",
            "content": {
              "application/json": {
                "example": "서버 에러"
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "get": {
        "summary": "로그아웃",
        "description": "사용자 로그아웃을 처리합니다.",
        "responses": {
          "200": {
            "description": "로그아웃 성공",
            "content": {
              "application/json": {
                "example": "로그아웃 성공"
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "example": "서버 에러"
              }
            }
          }
        }
      }
    }
  }
}
